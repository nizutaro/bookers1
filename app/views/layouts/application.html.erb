<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="notifications">
        <% if !@book.nil? %>
          <% if @book.save %>
            <div class="ok_notice"><%= flash[:notice] %></div>
          <% elsif %>
            <div class="ng_notice"><%= flash.now[:notice] %></div>
          <% end %>
        <% end %>
    </div>
      <%= yield %>
    </div>
  </body>
</html>
