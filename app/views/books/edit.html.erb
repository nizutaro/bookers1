<h2>Editing Book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
    <div class="submitMenu">
      <h5>Title</h5>
      <%= f.text_field :title %>
      <h5>body</h5>
      <%= f.text_area :body %>
      <p><%= f.submit 'Update Book' %></p>
      <%# Showの追加 %>
      <%= link_to "Show", "/books/#{@book.id}" %>
      <%= link_to "Back","/books" %>
    </div>
<% end %>